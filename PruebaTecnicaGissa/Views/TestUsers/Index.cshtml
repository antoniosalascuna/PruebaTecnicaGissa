@model IEnumerable<PruebaTecnicaGissa.Models.TestUser>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de usuarios registrados
</h1>

<p>
    <a asp-action="Create">Registrar nuevo usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserNickName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserUserType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserTypeCed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserCed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserPass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserNickName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserUserType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserTypeCed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserCed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserPass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
            <td>
                <a asp-action="Edit" class = "btn btn-warning" asp-route-id="@item.UserPrimaryId">Editar</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.UserPrimaryId">Detalles</a> |
                    <a asp-action="Delete" class = "btn btn-danger" asp-route-id="@item.UserPrimaryId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
